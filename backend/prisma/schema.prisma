// schema.prisma

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  clientId Int      @id @default(autoincrement())
  cpf       String   @unique
  name      String
  email     String
  cellPhone String
  orders    Order[]  
}

model Order {
  orderId      Int           @id @default(autoincrement())
  name         String
  value        Float
  amount       Int
  clientId     Int           
  client       Client        @relation(fields: [clientId], references: [clientId], onDelete: Cascade)
  installments Installment[] 
}

model Installment {
  installmentId   Int          @id @default(autoincrement())
  number          Int
  amount          Float
  dueDate         DateTime
  status          String
  orderId         Int          
  order           Order        @relation(fields: [orderId], references: [orderId], onDelete: Cascade)
}